{
    "presets": [["@babel/preset-env",
        {
            "targets": "> 5%"
        }
    ]],
    "plugins": [
        ["module-resolver",  { "root": ["./src"] } ],
        ["babel-plugin-inline-import", {
            "extensions": [
                ".json",
                ".glsl",
                ".gltf"
            ]
        }],
        ["@babel/plugin-transform-runtime"],
        ["minify-replace", {
            "replacements": [{
                "identifierName": "__DEBUG__",
                "replacement": {
                    "type": "booleanLiteral",
                    "value": false
                }
            }]
        }],
        ["minify-dead-code-elimination"]
    ]
}
